@using AcmeInsurance.Claims.Web.CriteriaManager.ViewModels
@model IEnumerable<ICriteriaDetailsViewModel>

@{
    ViewBag.Title ??= "List Criteria";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.DenialMinimumAmount)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.RequiresProviderIsInNetwork)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.RequiresProviderIsPreferred)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.RequiresClaimHasPreApproval)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <th scope="row">
            @Html.DisplayFor(modelItem => item.Id)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.DenialMinimumAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequiresProviderIsInNetwork)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequiresProviderIsPreferred)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequiresClaimHasPreApproval)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
