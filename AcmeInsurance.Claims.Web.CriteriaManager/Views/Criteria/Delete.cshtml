@using AcmeInsurance.Claims.Web.CriteriaManager.ViewModels;
@model ICriteriaDetailsViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Criteria</h2>

<h4 class="text-danger">Are you sure you want to delete this?</h4>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-4 text-sm-end col-md-3">@Html.DisplayNameFor(model => model.Id)</dt>
        <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.Id)</dd>

        <dt class="col-sm-4 text-sm-end col-md-3">@Html.DisplayNameFor(model => model.DenialMinimumAmount)</dt>
        <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.DenialMinimumAmount)</dd>

        <dt class="col-sm-4 text-sm-end col-md-3">@Html.DisplayNameFor(model => model.RequiresProviderIsInNetwork)</dt>
        <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.RequiresProviderIsInNetwork)</dd>

        <dt class="col-sm-4 text-sm-end col-md-3">@Html.DisplayNameFor(model => model.RequiresProviderIsPreferred)</dt>
        <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.RequiresProviderIsPreferred)</dd>

        <dt class="col-sm-4 text-sm-end col-md-3">@Html.DisplayNameFor(model => model.RequiresClaimHasPreApproval)</dt>
        <dd class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.RequiresClaimHasPreApproval)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button class="btn btn-danger" name="action" type="submit" value="delete">Delete</button>
            @Html.ActionLink("Back to List", "List")
        </div>
    }
</div>
